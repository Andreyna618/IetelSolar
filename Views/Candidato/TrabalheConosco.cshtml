        <!-- Trabalhe Conosco -->
	    <div class="container" style="padding: 1.7%;"> 


            <!-- Título -->
            <p class="titulo"> Faça parte da nossa <font color="#f58934"> EQUIPE </font>: </p>


            <!-- Formulário de Cadastro -->
		    <form action="/candidato/trabalheConosco" method="POST" enctype="multipart/form-data">
      

                <table width="100%">
                    <tr>
                        <!-- Nome --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 42px;"> Nome: </label> </td>
                        <td width="92%"> <input type="text" id="nome" name="nome" class="form-control" required style="width: 96%; margin-left: 0px;"> </td>
                    </tr>
                </table>
                

                <table width="100%">
                    <tr>
                        <!-- CPF --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 61px;"> CPF:  </label> </td>            
                        <td width="40%">
                            <input type="text" name="cpf" id="cpf" class="form-control" required placeholder="_ _ _ . _ _ _ . _ _ _ - _ _" onkeypress="$(this).mask('000.000.000-00');" style="width: 99.5%; margin-left: 0px;"> 
                        </td>

                        <!-- Telefone --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 16px;"> Telefone: </label> </td>
                        <td width="44%">
                            <div class="input_icone">
                                <input type="text" id="telefone" name="telefone" class="form-control" required placeholder="( _ _ ) _ _ _ _ _ - _ _ _ _" onkeypress="$(this).mask('(00) 00000-0000')" style="width: 91%; margin-left: 0px;">
                                <i class="fas fa-phone " style="color: #f58934;"> </i>
                            </div>
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- Cidade --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 36px;"> Cidade: </label> </td>
                        <td width="40%">
                            <input type="text" id="cidade" name="cidade" class="form-control" required style="width: 100%; margin-left: 0px;">
                        </td>
                    
                        <!-- LinkedIn --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 20px;"> LinkedIn: </label> </td>
                        <td width="44%">
                            <div class="input_icone_linkedIn">
                                <input type="text" id="linkedin" name="linkedin" class="form-control" required style="width: 91%; margin-left: 0px;">
                                <i class="fa-brands fa-linkedin" style="color: #f58934;"> </i>
                            </div>
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- E-mail --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 49px;"> Email: </label> </td>
                        <td width="40.4%">
                            <div class="input_icone_email">
                                <input type="email" id="email" name="email" class="form-control" required style="width: 100%; margin-left: 0px;">
                                <i class="fa fa-envelope" style="color: #f58934;"> </i>
                            </div>
                        </td>

                        <!-- Currículo --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 20px;"> Currículo: </label> </td>
                        <td width="44%">
                            <div class="input_icone">
                                <input class="form-control" type="file" name="arquivo" id="arquivo" required style="width: 91%; margin-left: 0px;">
                                <i class="fas fa-paperclip" style="color: #f58934;"> </i>
                            </div>
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- Mensagem --> 
                        <td width="7%"> <label class="texto_input_cadastro" style="margin-right: 6px;"> Mensagem: </label> </td>
                        <td > 
                            <div class="mensagem_textarea">
                                <textarea class="mensagem" id="mensagem" name="mensagem"> </textarea>
                            </div> 
                        </td>
                    </tr>
                </table>


                <!-- Botão -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="ENVIAR" name="enviar" id="enviar" class="botao" style="margin-top: 15px; margin-bottom: 4px;">
                    </div>
                </div>

            </form>
        </div>

