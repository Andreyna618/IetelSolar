        <!-- Calculadora Solar -->
	    <div class="container" style="padding: 1.7%;"> 


            <!-- Título -->
            <p class="titulo"> Faça uma <font color="#f58934"> SIMULAÇÃO </font> do seu Gerador Solar : </p>

            
            <!-- Formulário de Cadastro -->
		    <form action="cadastroCalculadoraSolar" method="POST" enctype="multipart/form-data">
      

                <!-- CEP -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input" style="margin-top: 6px;"> Digite o seu CEP: </label>
                        <input type="text" id="cep" name="cep" class="form-control" placeholder="_ _ _ _ _ - _ _" required onkeypress="$(this).mask('00000-000')">
                    </div>
                </div>


                <!-- Valor -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input"> Insira a quantidade gasta com a energia: </label>
                        <input type="text" id="valor" name="valor" class="form-control" placeholder="R$ 0,00" required onkeypress="$(this).mask('0000,00', {reverse: true})">
                    </div>
                </div>

                
                <!-- Select de Concessionárias -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input"> Informe a sua concessionária: </label>
                            <select name="concessionaria" class="concessionaria">
                                <option value="CPFL">          CPFL          </option>
                                <option value="Eletropaulo">   Eletropaulo   </option>
                                <option value="EDP São Paulo"> EDP São Paulo </option>
                                <option value="Elektro">       Elektro       </option>
                                <option value="Energisa">      Energisa      </option>
                            </select>
                    </div>
                </div>

                <!-- Botão -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="SIMULAR" name="simular" id="simular" class="botao" style="margin-bottom: 27px;">
                    </div>
                </div>

            </form>
        </div>

