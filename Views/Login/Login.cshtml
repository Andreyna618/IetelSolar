        <!-- Login -->
	    <div class="container" style="padding: 1.7%;"> 


            <!-- Título -->
            <p class="titulo"> Acesse a sua <font color="#f58934"> CONTA </font>: </p>


            <!-- Formulário de Cadastro -->
		    <form action="login" method="POST" enctype="multipart/form-data">
                
                
                <!-- Usuário -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input" style="margin-top: 6px;"> Usuário: </label>
                        <div class="input_icone_login">
                            <input type="text" id="usuario" name="usuario" class="form-control" required>
                            <i class="fa fa-user" style="color: #f58934;"></i>
                        </div>
                    </div>
                </div>


                <!-- Senha -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input"> Senha: </label>
                        <div class="input_icone_login">
                            <input type="password" id="senha" name="senha" class="form-control" required>
                            <i class="fa fa-solid fa-eye"       id="text" style="color: #f58934;"> </i>
                            <i class="fa fa-solid fa-eye-slash" id="pass" style="color: #f58934;"> </i>
                        </div>
                    </div>
                </div>


                <!-- Botão -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="ENTRAR" name="entrar" id="entrar" class="botao" style="margin-top: 40px; margin-bottom: 144px;">
                    </div>
                </div>

            </form>
        </div>

